{
  "name": "sim-loading-state",
  "version": "1.0.0",
  "description": "",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "prepack": "npm run build",
    "test": "mocha",
    "test:tsconfig": "cross-env TS_NODE_PROJECT=tsconfig.test.json npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simon-tanna/simcity-loading-state.git"
  },
  "keywords": [],
  "author": "@simon-tanna",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/simon-tanna/simcity-loading-state/issues"
  },
  "homepage": "https://github.com/simon-tanna/simcity-loading-state#readme",
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.13",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "events": "^3.3.0",
    "fs": "^0.0.1-security"
  }
}
