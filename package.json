{
  "name": "@simon-tanna/simcity-loading-state",
  "version": "1.0.0",
  "description": "",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "prepack": "npm run build",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simon-tanna/simcity-loading-state.git"
  },
  "keywords": [],
  "author": "@simon-tanna",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/simon-tanna/simcity-loading-state/issues"
  },
  "homepage": "https://github.com/simon-tanna/simcity-loading-state#readme",
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.13",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "events": "^3.3.0",
    "fs": "^0.0.1-security"
  }
}
